<%- include('layout', { title: title, body: `
  <h2>Shop Products 🛍️</h2>
  <div class="grid">
    ${products.map(p => `
      <div class="card">
        <img src="${p.image}" alt="${p.name}">
        <h3>${p.name}</h3>
        <p>$${p.price}</p>
        <form action="/products/add" method="POST">
          <input type="hidden" name="id" value="${p.id}" />
          <button type="submit">Add to Cart</button>
        </form>
      </div>
    `).join("")}
  </div>
` }) %>
